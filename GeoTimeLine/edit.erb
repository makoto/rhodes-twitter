<form title="Edit GeoTimeLine" 
	  class="panel" 
	  id="GeoTimeLine_edit_form" 
	  method="POST" 
	  action="<%=url_for(:action => :update)%>">
	<fieldset>
		<input type="hidden" name="id" value="<%=@GeoTimeLine.object%>"/>
		
		  <div class="row">
			  <label>Text: </label>
			  <input type="text" name="GeoTimeLine[text]" value="<%=@GeoTimeLine.text%>"/>
		  </div>
		
		  <div class="row">
			  <label>User screen name: </label>
			  <input type="text" name="GeoTimeLine[user_screen_name]" value="<%=@GeoTimeLine.user_screen_name%>"/>
		  </div>
		
		  <div class="row">
			  <label>User name: </label>
			  <input type="text" name="GeoTimeLine[user_name]" value="<%=@GeoTimeLine.user_name%>"/>
		  </div>
		
		  <div class="row">
			  <label>User profile image url: </label>
			  <input type="text" name="GeoTimeLine[user_profile_image_url]" value="<%=@GeoTimeLine.user_profile_image_url%>"/>
		  </div>
		
		  <div class="row">
			  <label>Source: </label>
			  <input type="text" name="GeoTimeLine[source]" value="<%=@GeoTimeLine.source%>"/>
		  </div>
		
	</fieldset>
	<input type="submit" value="Update"/>
	<p align="center">
		<a href="<%=url_for(:action => :delete, :id => @GeoTimeLine.object)%>">
			<font color="#990000">Delete</font>
		</a>
	</p>
</form>