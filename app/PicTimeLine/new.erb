<div class="toolbar">
	<h1 id="pageTitle">
		New PicTimeLine
	</h1>
</div>

<form title="New PicTimeLine" 
	  class="panel"
	  id="pictimeline_new_form" 
	  method="POST" 
	  action="<%=url_for(:action => :create)%>" selected="true">
	<fieldset>
  	  <div class="row">
  		  <label>id: </label>
    		<input type="text" name="id" value="<%=@pictimeline.object%>"/>
  	  </div>
		
		  <div class="row">
			  <label>Text: </label>
			  <input type="text" name="pictimeline[text]"/>
		  </div>

		  <div class="row">
		    <label>Pic: </label>
      	<%= link_to '[Choose Picture]', { :action => :edit }%>

        <% if @image %>
       		  <img src='<%= @image %>' width='100px'></img><br/>
       		  <input type="hidden" name="pictimeline[image_uri]" value="<%= @image %>"/>
       	<% else %>
       	    There is no @image
      	<% end %>
		  </div>

 		  <div class="row">
		    <label>Callback: </label>
      	<%= link_to '[Choose Picture]', { :action => :camera_callback }%>
		  </div>

		
	</fieldset>
	<input type="submit" value="Create"/>
</form>